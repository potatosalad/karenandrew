 *= require_tree .
 *= require_self
*/

body {
  margin: 0;
  padding: 0;
  min-width:960px;
  font-family: Helvetica;
  font-size: 10pt;
}
#countdown-container {
  z-index: 10;
  position: absolute;
  right: 0;
  top: 0;
  display: block;
  -webkit-box-shadow:0 0 50px rgba(255, 255, 255, 0.8);
  -moz-box-shadow: 0 0 50px rgba(255, 255, 255, 0.8); 
  box-shadow:0 0 50px rgba(255, 255, 255, 0.8);
  padding: 5px;
  color: #606;
  text-shadow: 0px 1px 2px rgba(51, 0, 51, 0.25);
}
#countdown-container #label {
  text-align: right;
}
#countdown.highlight {
  color: #c00;
  text-shadow: 0px 1px 2px rgba(102, 0, 0, 0.25);
}
#container {
  border-bottom: 9px solid #cc1814;
}
#container hr {
  clear: both;
  margin: 0;
  padding: 0;
  border: 0;
  background-color: #fff;
  height: 1px;
}
#banner {
  height:486px;
  width: 100%;
  padding-top: 64px;
  background-color: #f2ff30;
  border-bottom: 18px solid #000;
}
#repeat {
  background: transparent url(<%= asset_path 'flower-repeat.jpg' %>) repeat-x top right;
  height: 100%;
  width:100%;
  position:absolute;
  right:960px;
}
#main a.banner {
  float: right;
  background: transparent url(<%= asset_path 'banner.jpg' %>) no-repeat top right;
  width:100%;
  height:486px;
}
#main a.banner span { display: none; }
#main ul {
  margin: 0;
  padding: 0;
  list-style: none;
  position: absolute;
  right: 0px;
  top: 460px;
}
#main ul li {
  float: left;
  margin-right: 8px;
}
#main ul li:not(:last-child) {
  border-right: 1px solid rgba(0, 0, 0, 0.5);
}
#main ul li a {
  display: block;
  height: 80px;
  padding-left: 130px;
  margin-right: 8px;
  color: rgba(255, 255, 255, 0.5);
  text-decoration: none;
}
#main ul li a:hover {
  color: rgba(255, 255, 255, 1.0);
}
#main ul li a span {
  display: block;
  position: relative;
  top: 26px;
  background-color: rgba(0, 0, 0, 0.5);
  height: 24px;
  line-height: 24px;
  padding: 4px 8px;
}
#main ul li.topics a {
  background: transparent url(<%= asset_path 'topics-off.png' %>) no-repeat top left;
}
#main ul li.topics a:hover {
  background-image: url(<%= asset_path 'topics-on.png' %>);
}
#main ul li.journal a {
  background: transparent url(<%= asset_path 'journal-off.png' %>) no-repeat top left;
}
#main ul li.journal a:hover {
  background-image: url(<%= asset_path 'journal-on.png' %>);
}
#main ul li.recipes a {
  background: transparent url(<%= asset_path 'recipes-off.png' %>) no-repeat top left;
}
#main ul li.recipes a:hover {
  background-image: url(<%= asset_path 'recipes-on.png' %>);
}
#main ul li.howto a {
  background: transparent url(<%= asset_path 'howto-off.png' %>) no-repeat top left;
  padding-left: 96px;
}
#main ul li.howto a:hover {
  background-image: url(<%= asset_path 'howto-on.png' %>);
}